<div id="page-content">
  <div class="row breadcrumb breadcrumb-top">
      <li><%= t "admin" %></li>
      <li><%= link_to t("club_manager.album.album"), t("do_nothing") %></li>
      <div class="row pull-right">
        <%= link_to "#modal-new-album", data: {toggle: "modal"}, class: "btn btn-sm btn-primary" do %>
          <i class="fa fa-camera"></i><%= t "club_manager.album.create" %>
        <% end %>
      </div>
  </div>
  <div class="row">
    <div class="block">
      <div class="gallery" data-toggle="lightbox-gallery">
        <%= render "list" %>
      </div>
    </div>
  </div>
</div>
<div id="modal-new-album" class="modal fade" tabindex="-1"
  role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h2 class="modal-title">
          <i class="fa fa-camera"></i><%= t "club_manager.album.create" %>
      </h2>
      </div>
      <div class="modal-body">
        <%= render partial: "form_club_album", locals: {key: @new_album} %>
      </div>
    </div>
  </div>
</div>
