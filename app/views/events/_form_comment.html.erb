<%= form_for Comment.new, remote: true do |f| %>
  <%= f.text_area :content, class: "form-control text-area-comment",
    id: "profile-newsfeed-comment", rows: 4, required: :true,
    placeholder: t("your_comment") %>
  <%= f.hidden_field :target_id, value: target.id %>
  <%= f.hidden_field :target_type, value: Settings.event %>
  <%= f.submit t("post_comment"),
    class: "btn btn-danger pull-left" %>
<% end %>
