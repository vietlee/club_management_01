<div id="page-container">
<%= render "clubs/header_club" %>
  <section class="site-content site-section">
    <div class="container">
      <div class="row">
        <div class="col-md-10 col-md-offset-1 site-block">
          <article>
          <h1><%= @event.name %></h1>
          <hr>
          <div class="row">
            <div class="col-md-3 fa fa-money"><strong> <%= t "expense" %></strong> <br><%= number_to_vnd @event.expense %></div>
            <div class="col-md-3 fa fa-map-marker"><strong> <%= t "location" %></strong> <br><%= @event.location %></div>
            <div class="col-md-3 fa fa-calendar"><strong> <%= t "date_start" %></strong> <br><%= @event.date_start %></div>
            <div class="col-md-3 fa fa-clock-o"><strong> <%= t "date_end" %></strong> <br><%= @event.date_end %></div>
          </div>
          <hr>
            <p><%= t "event_content" %></p>
            <div class="row push-top-bottom">
              <div class="col-sm-6">
                <p>
                  <a href="#" data-toggle="lightbox-image">
                    <%= image_tag "placeholders/photos/photo1.jpg", class: "img-responsive" %>
                  </a>
                </p>
              </div>
              <div class="col-sm-6">
                <p>
                  <a href="#" data-toggle="lightbox-image">
                    <%= image_tag "placeholders/photos/photo21.jpg", class: "img-responsive" %>
                  </a>
                </p>
              </div>
            </div>
            <blockquote>
              <p><%= t "event_content" %></p>
              <footer>John Doe</footer>
            </blockquote>
            <p><%= t "event_content" %></p>
            <div class="row push-top-bottom">
              <div class="col-sm-4">
                <p>
                  <a href="#" data-toggle="lightbox-image">
                    <%= image_tag "placeholders/photos/photo14.jpg", class: "img-responsive" %>
                  </a>
                </p>
              </div>
              <div class="col-sm-4">
                <p>
                  <a href="#" data-toggle="lightbox-image">
                    <%= image_tag "placeholders/photos/photo18.jpg", class: "img-responsive" %>
                  </a>
                </p>
              </div>
              <div class="col-sm-4">
                <p>
                  <a href="#" data-toggle="lightbox-image">
                    <%= image_tag "placeholders/photos/photo22.jpg", class: "img-responsive" %>
                  </a>
                </p>
              </div>
            </div>
            <p><%= t "event_content" %></p>
          </article>
        </div>
      </div>
      <hr>
    </div>
  </section>
  <div class="list-comment-event">
    <%= render partial: "events/comment",
      locals: {target: @event} if @event.comments.any? %>
  </div>
  <%= render "new_comment" %>
</div>
<div class="join-event-toggle-container">
  <%= render "user_events/join_event_toggle" %>
</div>
