<div class="notifyBody notification-<%= notification.read %>"
  data-link="" id="notify-id-<%= notification.id %>"
  data-id="<%= notification.id %>">
  <div class="row">
    <div class="col-md-3 notify-content">
      <%= option_image(notification) %>
    </div>
    <div class="col-md-8 notify-content">
      <span>
        <strong><%= notification.owner.full_name %></strong>
        <%= t "has_been" %>
        <%= t notification.key.downcase %>
        <%= t notification.trackable_type.downcase %>:
        <strong><%= notification.trackable.name %></strong>
        <% if notification.container %>
          <%= t "in_the" %>
          <%= t notification.container_type.downcase %>
          <strong><%= notification.container.name %></strong>
        <% end %>
      </span>
    </div>
  </div>
  <div class="bot-border"></div>
</div>
