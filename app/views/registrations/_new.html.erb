<div id="modal-user-sign-up" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h2 class="modal-title"><i class="fa fa-user-plus"></i> <%= t "register" %></h2>
      </div>
      <div class="modal-body">
      <%= devise_error_messages! %>
        <%= form_for :user, url: user_registration_path,
          html: {class: "form-horizontal form-bordered" } do |f| %>
            <div class="form-modal">
              <fieldset>
                <legend><%= t "user_info" %></legend>
                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="gi gi-envelope"></i>
                  </span>
                  <%= f.email_field :email, class: "form-control input-lg",
                    placeholder: t("example_email"), required: true %>
                </div>
                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="gi gi-user"></i>
                  </span>
                  <%= f.text_field :full_name, class: "form-control input-lg",
                    placeholder: t("full_name"), required: true %>
                </div>
              </fieldset>
              <fieldset>
                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="fa fa-phone-square"></i>
                  </span>
                  <%= f.text_field :phone, class: "form-control input-lg",
                    placeholder: t("phone"), required: true %>
                </div>
                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="fa fa-file"></i>
                  </span>
                  <%= f.file_field :avatar, class: "form-control", placeholder: t("full_name"), required: true %>
                </div>
              </fieldset>
              <fieldset>
                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="gi gi-asterisk"></i>
                  </span>
                  <%= f.password_field :password, placeholder: t("password"), class: "form-control input-lg",
                    id: "user-settings-password", required: true %>
                </div>
                <div class="input-group">
                  <span class="input-group-addon">
                    <i class="gi gi-asterisk"></i>
                  </span>
                  <div class="">
                    <%= f.password_field :password_confirmation, placeholder: t("password_confirmation"), class: "form-control", id: "val_password" %>
                    <span class=""></span>
                  </div>
                </div>
              </fieldset>
            </div>
            <div class="form-group form-actions">
              <div class="col-xs-12 text-right">
                <button type="submit" class="btn btn-sm btn-primary">
                  <%= t "register" %>
                </button>
                <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">
                  <%= t "close" %>
                </button>
              </div>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
