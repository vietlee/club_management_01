<div class="media-container">
<%= render "users/users" %>
  <section class="site-section site-section-light site-section-top">
    <div class="container description-club-text description-club">
      <div class="join-cancel-toggle-container">
        <%= render "user_clubs/join_cancel_toggle" %>
      </div>
      <h1 class="animation-slideDown">
        <strong><%= @club.name %></strong>
        <div class="pull-left dropdown">
          <span class="caret" data-toggle="dropdown"></span>
          <% if current_user.user_clubs.joined.of_club(@club) %>
            <ul class="dropdown-menu">
              <li><%= link_to t("albums"), club_albums_path(club_id: @club.id) %></li>
              <li><%= link_to t("leave_club"), user_club_path(club_id: @club.id), method: :delete, data: {confirm: t("answer_leave")} %></li>
            </ul>
          <% end %>
        </div>
      </h1>
      <span class="animation-slideUp hidden-xs rating-container">
        <%= render "ratings/rating" %>
      </span>
      <p class="h3 animation-slideUp hidden-xs description-club-text">
        <% if @club.description.length > Settings.club_description %>
          <%= @club.description.truncate(Settings.club_description).html_safe %>
          <%= link_to "#modal-club-description", data: {toggle: "modal"},
            class: "btn btn-sm btn-default animation-fadeIn360" do %>
            <i class="fa fa-plus "></i> <%= t "more" %>
          <% end %>
        <% end %>
      </p>
    </div>
    <div class="container"></div>
  </section>
  <%= image_tag @club.image, class: "media-image animation-pulseSlow" %>
</div>
<div id="modal-club-description" class="modal fade" tabindex="-1" role="dialog"
  aria-hidden="true">
  <%= render "popups/description" %>
</div>
