<div class="dropdown action-comment">
  <span class="dropdown-toggle" data-toggle="dropdown">
    <span class="fa fa-cog"></span>
  </span>
  <ul class="dropdown-menu drop_form">
    <li>
      <%= link_to edit_comment_path(comment_select), remote: :true do %>
        <span class="fa fa-pencil"><%= t "edit" %></span>
      <% end %>
    </li>
    <li>
      <%= link_to comment_path(comment_select), method: :delete, remote: :true,
        data: {confirm: t("confirm_delete_comment")} do %>
        <span class="fa fa-times"> <%= t "delete" %></span>
      <% end %>
    </li>
  </ul>
</div>
