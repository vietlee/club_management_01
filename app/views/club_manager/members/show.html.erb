<div id="page-content">
  <ul class="breadcrumb breadcrumb-top">
    <li><%= t "member.show" %></li>
    <li><%= link_to @member.full_name, t("do_nothing") %></a></li>
  </ul>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <div class="block full">
        <div class="block-title">
          <h2><strong><%= link_to @member.full_name, t("do_nothing") %></strong></h2>
        </div>
        <%= link_to t("back"), club_manager_club_path(@club.id),
          class: "btn btn-danger" %>
        <div class="block-content">
          <div class="center"><%= image_tag @member.avatar,
            class: "circle-profile" %></div><hr>
          <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-2">
              <strong class="pull-right"><%= t "name" %></strong>
            </div>
            <div class="col-md-6 center"><%= @member.full_name %></div>
            <div class="col-md-1"></div>
          </div><hr>
          <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-2">
              <strong class="pull-right"><%= t "email" %></strong>
            </div>
            <div class="col-md-6 center"><%= @member.email %></div>
            <div class="col-md-1"></div>
          </div><hr>
          <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-2">
              <strong class="pull-right"><%= t "phone" %></strong>
            </div>
            <div class="col-md-6 center"><%= @member.phone %></div>
            <div class="col-md-1"></div>
          </div><hr>
          <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-2">
              <strong class="pull-right"><%= t "member.clubs" %></strong>
            </div>
            <div class="col-md-6 center">
              <% @member.clubs.each do |club| %>
                <% if status_user_club(@member, club) %>
                  <%= club.name %><br>
                <% end %>
              <% end %>
            </div>
            <div class="col-md-1"></div>
          </div><hr>
        </div>
      </div>
    </div>
    <div class="col-md-1"></div>
  </div>
</div>
