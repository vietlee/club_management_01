<div id="page-content">
  <div class="block">
    <div class="block-title">
      <h2><strong><%= @news.title %></strong></h2>
    </div>
    <div class="row">
      <div class="col-md-6 full-img" >
          <%= image_tag @news.image %>
      </div>
      <div class="col-md-6" >
        <h3>
          <i class="fa fa-pencil"><strong><%= t "club_manager.news.post_by" %>
            </strong class="pull-right"><%= @news.full_name %>
          </i><br><hr>
          <i class="fa fa-map-marker">
            <strong><%= t "club_manager.news.post_at" %></strong>
            <%= l @news.created_at, format: :date %>
          </i><br><hr>
          <i class="fa fa-calendar">
            <strong><%= t "club_manager.news.last_update_at" %></strong>
            <%= l @news.updated_at, format: :date %>
          </i><br><hr>
        </h3>
        <div class ="text-center">
          <%= link_to edit_club_manager_club_event_news_path(@news),
            class: "btn btn-lg btn-primary"  do %>
            <i class="fa fa-pencil"> <%= t "edit" %></i>
          <% end %>
        </div>
      </div>
    </div><hr>
    <h1><%= t "club_manager.news.content" %></h1><hr>
    <div class="row" >
      <div class="col-md-1"></div>
      <%= @news.content.html_safe %>
    </div><hr>
  </div>
</div>
