<div id="sidebar">
  <div id="sidebar-scroll">
    <div class="sidebar-content">
      <div class="sidebar-section sidebar-user clearfix sidebar-nav-mini-hide">
        <div class="sidebar-user-avatar">
          <%= link_to t("do_nothing") do %>
            <%= image_tag current_user.avatar %>
          <% end %>
        </div>
        <div class="sidebar-user-name"></div>
        <div class="sidebar-user-links">
          <%= link_to t("do_nothing"), title: t("profile") do %>
            <i class="gi gi-user"></i></a>
          <% end %>
          <%= link_to "#modal-user-settings", title: t("setting") do %>
            <i class="gi gi-cogwheel"></i></a>
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete,
            title: t("logout") do %>
            <i class="gi gi-exit"></i></a>
          <% end %>
        </div>
      </div>
      <ul class="sidebar-nav">
        <li class="sidebar-header">
          <span class="sidebar-header-title"><%= t "clubs_manager" %></span>
        </li>
        <li>
          <%= link_to club_manager_path do %>
            <i class="gi gi-leaf sidebar-nav-icon"></i>
            <span class="sidebar-nav-mini-hide"><%= t "Dashboard" %></span>
          <% end %>
        </li>
        <li>
          <%= link_to t("do_nothing"), class: "sidebar-nav-menu" do %>
            <i class="fa fa-angle-left sidebar-nav-indicator sidebar-nav-mini-hide"></i>
            <i class="gi gi-group sidebar-nav-icon"></i>
            <span class="sidebar-nav-mini-hide"><%= t "my_clubs" %></span>
          <% end %>
          <ul>
            <% name_organization_of_manager(manager_of_club(current_user)).each do |organization| %>
              <li>
                <a href="#" class="sidebar-nav-submenu"><i class="fa fa-angle-left sidebar-nav-indicator"></i><%= organization %></a>
                <ul>
                  <% clubs_manager_of_organization(organization, current_user).each do |club| %>
                  <li>
                    <%= link_to club.name, club_manager_club_path(club.id) %>
                  </li>
                  <% end %>
                </ul>
              </li>
            <% end %>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</div>
